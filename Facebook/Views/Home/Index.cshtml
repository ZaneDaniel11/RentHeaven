
@section Styles {
    <link rel="stylesheet" href="~/css/Home/index-style.css" />
}


<div class="container">
    <div class="left-section">
        <div class="facebook-logo">facebook</div>
        
        <div class="recent-logins">
            <h2>Recent Logins</h2>
            <p>Click your picture or add an account.</p>
            
            <div class="accounts-grid">
                <div class="account-item">
                    <div class="profile-container">
                         <img src="/placeholder.svg?height=80&width=80" alt="Zane" class="profile-pic">
                    </div>
                   
                    <div class="account-name">Zane</div>
                </div>
                
                <a href="#" class="add-account">
                    <div class="add-icon">+</div>
                    <div class="add-text">Add Account</div>
                </a>
            </div>
        </div>
    </div>

    <div class="right-section">
        <form class="login-form" method="post">
            <div class="form-group">
                <input type="email" class="form-input" placeholder="Email address or phone number" 
                       value="" name="Email" required>
            </div>
            
            <div class="form-group">
                <div class="password-container">
                    <input type="password" class="form-input" placeholder="Password" 
                           name="Password" id="password" required>
                    <span class="password-toggle" onclick="togglePassword()">👁</span>
                </div>
            </div>
            
            <button type="submit" class="login-btn">Log In</button>
            
            <div class="forgot-password">
                <a href="#">Forgot password?</a>
            </div>
            
            <div class="divider"></div>
            
            <a href="@Url.Action("SignUp","Home")" class="create-account-btn">Create new account</a>
        </form>
        
        <div class="create-page">
            <a href="#">Create a Page</a> for a celebrity, brand or business.
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('password');
        const toggleIcon = document.querySelector('.password-toggle');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.textContent = '🙈';
        } else {
            passwordInput.type = 'password';
            toggleIcon.textContent = '👁';
        }
    }
</script>