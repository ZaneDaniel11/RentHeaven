<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Heaven.styles.css" asp-append-version="true" />
   <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
 <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary flex-column pt-4 px-5 ">
        <div class="container-fluid d-flex justify-content-between align-items-center ">
            <!-- Left Section -->
            <div class="d-flex align-items-center gap-3">
                <a class="nav-link active" href="#">Logo</a>
                <a class="nav-link active" href="#">RentHeaven</a>
            </div>

            <!-- Center Section -->
            <div class="d-flex align-items-center gap-5">
                <a class="nav-link" href="#">Features</a>
                <a class="nav-link" href="#">Pricing</a>
                <a class="nav-link" href="#">About</a>
            </div>

            <!-- Right Section -->
            <div class="d-flex align-items-center gap-3">
                <a class="nav-link disabled" aria-disabled="true">Login</a>
                <a class="nav-link disabled" aria-disabled="true">Signup</a>
            </div>
        </div>

        <div class="d-flex mt-3">         
            <div class="input-group mb-3" ">
            <input type="text" class="SearchInput" >
            </div>
        </div>
    </nav>
</header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
